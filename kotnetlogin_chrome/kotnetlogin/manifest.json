{
  "name": "Kotnet Login",
  "manifest_version": 2,
  "update_url": "http://kotnetloginextension.googlecode.com/hg/kotnetlogin_chrome/updates.xml",
  "version": "1.8.1",
  "homepage_url":"http://kotnetloginextension.googlecode.com",
  "description": "Kotnet Login is een extensie die je automatisch inlogt op sites van de KULeuven zoals bv. Kotnet, Toledo...",
  
  "background": {
    "scripts": ["eventPage.js"],
    "persistent": false
  },
  
  "browser_action": {
      "default_title": "Kotnet Login"
   },
   "icons": {
      "32" : "icon_32.png",
      "48" : "icon_48.png",
      "128": "icon.png"
   },
  "content_scripts": [
    {
      "matches": ["*://*.kuleuven.be/*", "*://*.groept.be/*"],
      "run_at": "document_idle",
      "js": ["init.js","login.js","redirect.js"]
    }
  ],
  "options_page": "options.html",
  "permissions": ["tabs"]
}