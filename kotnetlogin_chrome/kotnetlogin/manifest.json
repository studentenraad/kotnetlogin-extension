{
  "name": "Kotnet Login",
  "manifest_version": 2,
  "update_url": "https://kotnetloginextension.googlecode.com/hg/kotnetlogin_chrome/updates.xml",
  "version": "1.9.1",
  "homepage_url":"https://kotnetloginextension.googlecode.com",
  "description": "__MSG_manifest_extensionDescription__",
  
  "background": {
    "scripts": ["background.js"]
  },
  
  "browser_action": {
      "default_title": "Kotnet Login",
      "default_icon": "icon/icon_128.png"
   },
   "icons": {
      "32" : "icon/icon_32.png",
      "48" : "icon/icon_48.png",
      "128": "icon/icon_128.png"
   },
  "content_scripts": [
    {
      "matches": ["*://*.kuleuven.be/*", "*://*.groept.be/*"],
      "run_at": "document_idle",
      "js": ["init.js","login.js","redirect.js"]
    }
  ],
  "options_page": "options.html",
  "permissions": ["tabs"],
  "default_locale": "en"
}